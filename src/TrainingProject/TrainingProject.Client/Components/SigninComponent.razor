<EditForm Model="loginModel" OnValidSubmit="Signin">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group row">
        <label class="col-form-label font-weight-bolder" for="UserName">User Name</label>
        <div class="col-sm-10">
            <input class="form-group input-group" type="text" id="UserName" @bind-value="loginModel.UserName" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-form-label font-weight-bolder" for="Password">Password</label>
        <div class="col-sm-10">
            <input class="form-group input-group" type="password" id="Password" @bind-value="loginModel.Password" />
        </div>
    </div>
    <div class="form-group row">
        <input class="btn btn-success" type="submit" value="Войти" />
    </div>
</EditForm>

@code {
    [CascadingParameter] BlazoredModalInstance BlazoredModal { get; set; }

    protected LoginDTO loginModel { get; set; } = new LoginDTO();

    public void Signin()
    {
        BlazoredModal.Close(ModalResult.Ok<LoginDTO>(loginModel));
    }
}
